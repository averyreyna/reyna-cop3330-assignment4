<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.ApplicationController">
    <padding>
        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
    </padding>
    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onBackToListClick" text="Back to To-Do List" textAlignment="CENTER" />
    <Label alignment="TOP_CENTER" text="Item" textAlignment="CENTER">
        <font>
            <Font size="20.0" />
        </font></Label>
    <Accordion />
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label contentDisplay="CENTER" prefHeight="18.0" prefWidth="371.0" text="Title: " textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label contentDisplay="CENTER" prefHeight="18.0" prefWidth="371.0" text="Due Date: " textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label contentDisplay="CENTER" prefHeight="18.0" prefWidth="371.0" text="Description: " textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </children>
    </GridPane>

    <Label fx:id="buttonResponses" />
    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onEditItemClick" text="Edit Item" textAlignment="CENTER" />
</VBox>